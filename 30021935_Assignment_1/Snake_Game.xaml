<Page
    x:Class="_30021935_Assignment_1.Snake_Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="_30021935_Assignment_1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:Name="GameCanvas" Width="1000" Height="500" Background="DarkCyan">
            <!-- Your game elements here -->
        </Canvas>

        <!-- Score Panel -->
        <Border Background="Black" BorderBrush="White" BorderThickness="2" Padding="10" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <TextBlock x:Name="ScoreText" Foreground="White" FontSize="24" Text="Score: 0" />
        </Border>

        <!-- Home Button -->
        <Button x:Name="HomeButton" Content="Home" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="HomeButton_Click" Visibility="Collapsed" />

        <!-- Play Again Button -->
        <Button x:Name="PlayAgainButton" Content="Play Again" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="150,10,0,0" Click="PlayAgainButton_Click" Visibility="Collapsed" />
    </Grid>
</Page>
